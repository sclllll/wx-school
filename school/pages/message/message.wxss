/* pages/message/message.wxss */
.header{
	background-color: #b4f8fa;
	width:100%;
	height:110rpx;
}
.header>text{
	margin-left:20rpx;
	line-height:110rpx;
}
.body{
	width:100%;
	height:auto;
}
.body .img1{
	width:100%;
	height:350rpx;
	background-image: url(http://127.0.0.1:3000/img/school1.jpg);
	background-size:100% 100%;
	text-align: right;

}
.body .img1>text{
	writing-mode: vertical-rl;
	color:#fff;
	font-size: 22rpx;
	margin-left:15rpx;
	margin-right:15rpx;
	margin-top:50rpx;
	height:300rpx;
	display: inline-block;
	text-align: left;
	letter-spacing: 20rpx;
}
.body .img1 .first{
	margin-right:100rpx;
	font-weight: bold;
	font-size:32rpx;
}
.body .middle{
	width:100%;
	height:100%;
}
.body .middle .pow{
	font-size:30rpx;
	font-weight: bold;
	margin-top: 10rpx;
	text-align:center;
}
.body .middle .teac{
	font-size:24rpx;
	margin-top:10rpx;
	width:40%;
	color:#b4f8fa;
	background-color: #000;
	margin-left: 30%;
	text-align: center;
}
.body .middle .resp{
	font-size:28rpx;
	margin-top:10rpx;
	width:40%;
	color:#000;
	margin-left: 30%;
	text-align: center;
}
.body .inp{
	border: 1px solid #ccc;
	width:94%;
	margin-bottom:15rpx;
	margin-top:15rpx;
	margin-left:20rpx;
	font-size:30rpx;
}
.body .sub{
	width:25%;
	height:80rpx;
	line-height: 80rpx;
}
