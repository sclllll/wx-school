/* pages/home/home.wxss */
@import "post/header_template.wxss";
.body{
	width:100%;
	height:auto;
}
.body .middle{
	width:100%;
	height:100%;
	overflow: hidden;
}
.body .pow{
	font-size:30rpx;
	font-weight: bold;
	margin-top: 10rpx;
	text-align:center;
}
.body .teac{
	font-size:24rpx;
	margin-top:10rpx;
	width:35%;
	color:#b4f8fa;
	background-color: #000;
	margin-left: 33%;
	text-align: center;
}
.body .middle .bg{
	width:100%;
	display: flex;
	justify-content: space-around;
}

.body .middle .four{
	margin-top:20rpx;
	margin-bottom:15rpx;
}
.body .middle .four>image{
	width:160rpx;
	height:160rpx;
}
.body .middle .gro{
	display: flex;
	justify-content: space-around;
	font-weight: bold;
	font-size:30rpx;
}
.body .middle .img2{
	width:100%;
	height:250rpx;
	background-image: url(http://127.0.0.1:3000/img/floor.jpg);
	background-size:100% 100%;
	text-align: right;
	margin-top: 25rpx;
}
.body .middle .img2>text{
	writing-mode: vertical-rl;
	color:#fff;
	font-size: 22rpx;
	margin-left:15rpx;
	margin-right:15rpx;
	margin-top:50rpx;
	height:300rpx;
	display: inline-block;
	text-align: left;
	letter-spacing: 20rpx;
}
.body .middle .img2 .letter{
	margin-right:100rpx;
}
.body .middle .good{
	width:100%;
	margin-top:20rpx;
	margin-bottom: 20rpx;
}
.body .middle .good>text{
	display: block;
	background-color: #000;
	color:#b4f8fa;
	width:45%;
	font-size:30rpx;
	text-align: center;
	margin-left:20rpx;
}
.body .middle .inf{
	font-size: 28rpx;
	width:100%;
}
.body .middle .inf>text{
	margin-left:20rpx;
	width:95%;
	display: block;
	margin-bottom:10rpx;
}
.body .middle .but{
	width: 100%;
  margin-top: 20rpx;
	margin-bottom: 20rpx;
}
.body .middle .but>button{
	width:28%;
	background-color: #b4f8fa;
  color: #000;
  border-radius: 5rpx; 
	font-size:28rpx;
	display: block;
	margin-left: 20rpx; 
}
.body .middle .img3{
	width:100%;
	height:200rpx;
	display: flex;
	justify-content: space-around;
	border-bottom:1px solid #ccc;
}
.body .middle .img3>view{
	margin-bottom:10rpx;
	margin-left:20rpx; 
	height:150rpx;
}
.body .middle .img3>view>image{
	width:220rpx;
	height:150rpx;
}
.body .middle .img3>view>text{
	font-size:22rpx;
	height:30rpx;
	width:100%;
}
.body .middle .img3 .fle{
	display: flex;
	flex-wrap: wrap;
	align-items: column;
	height:150rpx;
}
.body .middle .img3 .fle .clo{
	display: flex;
	justify-content: space-between; 
	width:100%;
}
.body .middle .img3 .fle .clo>text{
	font-size:30rpx;
	color:#0072e3;
	width:90%;
}
.body .middle .more>button{
	font-size:30rpx;
	background:#fff;
}
.body .middle .beau{
	margin-left:20rpx;
	font-size:30rpx;
	font-weight:bold;
	margin-bottom:20rpx;
}
.foot{
	width:100%;
	height:100%;
	border-top:1px solid #b4f8fa;
}
.foot .com{
	width:100%;
	height:160rpx;
	text-align: center;
	border-bottom:#b4f8fa;
	margin-top:20rpx; 
}
.foot .com>image{
	width:70%;
	height:100rpx;
	margin-top:20rpx;
	margin-bottom:15rpx;
}
.foot .nam{
	width:100%;
	height:360rpx;
	border-top:1px solid #b4f8fa;
	border-bottom:1px solid #b4f8fa;
	margin-top:50rpx; 
	text-align: center;
}
.foot .nam>image{
	width:300rpx;
	height:250rpx;
	margin-top:40rpx;
}
.foot .last{
	height:180rpx;
	text-align:center;
}
.foot .last>text{
	font-size:20rpx;
	width:100%;
}